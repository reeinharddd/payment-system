# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://dev:dev123@localhost:5432/paymentdb
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT
JWT_SECRET=your-secret-key-change-in-production-use-at-least-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Payment Providers - Mexico
CONEKTA_API_KEY=key_xxx
CONEKTA_WEBHOOK_SECRET=whsec_xxx
CONEKTA_API_VERSION=2.0.0

# Payment Providers - Colombia
PAYU_API_KEY=key_xxx
PAYU_API_LOGIN=xxx
PAYU_MERCHANT_ID=xxx
PAYU_ACCOUNT_ID=xxx

# Payment Providers - Argentina
MERCADOPAGO_ACCESS_TOKEN=APP-xxx
MERCADOPAGO_PUBLIC_KEY=APP-xxx

# Payment Providers - Chile (coming soon)
KHIPU_RECEIVER_ID=xxx
KHIPU_SECRET=xxx

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=xxx
S3_BUCKET=payment-invoices
S3_REGION=us-east-1
SQS_INVOICE_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/xxx/invoices
SQS_NOTIFICATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/xxx/notifications
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:xxx:payment-events

# Google Cloud Platform
GCP_PROJECT_ID=payment-system-12345
GCP_KEY_FILE=/secrets/gcp-key.json
GCS_BUCKET=payment-documents
FIRESTORE_DATABASE=(default)

# Azure
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER=invoices
AZURE_QUEUE_NAME=payments

# Observability
SENTRY_DSN=https://xxx@sentry.io/xxx
GRAFANA_URL=http://grafana:3000
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
LOG_LEVEL=info

# LLM / AI Services
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4

# Model Context Protocol
MCP_SERVER_URL=http://localhost:8080
MCP_ENABLED=true

# Notifications
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=noreply@paymentsystem.com

# Feature Flags
FEATURE_NFC_PAYMENTS=false
FEATURE_MICROFINANCE=false
FEATURE_AI_INSIGHTS=true
FEATURE_OFFLINE_MODE=true
FEATURE_MULTI_CURRENCY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:4200,https://app.paymentsystem.com
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Webhooks
WEBHOOK_SECRET=whsec_your_webhook_secret_here
WEBHOOK_TIMEOUT=30000

OBSIDIAN_API_KEY=your_api_key_here
OBSIDIAN_HOST=your_obsidian_host
OBSIDIAN_PORT=your_obsidian_port